<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.portfolio.defstuf.controllers.note.CreateNoteController"
            style="-fx-background-color: #f5f5f5;">
   
   <top>
      <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20;">
         <Label text="Create Note" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
         <Separator />
      </VBox>
   </top>
   
   <center>
      <ScrollPane fitToWidth="true" fitToHeight="true">
         <VBox spacing="20" style="-fx-padding: 20;">
            
            <!-- Title Section -->
            <VBox spacing="5">
               <Label text="Title:" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
               <TextField fx:id="titleField" promptText="Enter note title..." 
                          style="-fx-font-size: 14px;" />
            </VBox>
            
            <!-- Description Section -->
            <VBox spacing="5">
               <Label text="Description:" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
               <TextArea fx:id="descriptionArea" promptText="Enter note description..." 
                         wrapText="true" prefRowCount="5"
                         style="-fx-font-size: 14px;" />
            </VBox>
            
            <!-- Screenshot Section -->
            <VBox spacing="10">
               <Label text="Screenshot:" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
               
               <!-- Screenshot Preview Area -->
               <BorderPane style="-fx-background-color: white; -fx-border-color: #cccccc; -fx-border-width: 1;">
                  <center>
                     <StackPane minHeight="300" alignment="CENTER">
                        <ImageView fx:id="screenshotImageView" 
                                   fitWidth="600" 
                                   fitHeight="300" 
                                   preserveRatio="true"
                                   style="-fx-background-color: #f9f9f9;" />
                        <Label fx:id="screenshotPlaceholderLabel" 
                               text="No screenshot captured yet" 
                               style="-fx-text-fill: #999999;" />
                     </StackPane>
                  </center>
               </BorderPane>
               
               <HBox spacing="10">
                  <Button fx:id="captureButton" 
                          text="Capture Screenshot" 
                          onAction="#captureScreenshot"
                          style="-fx-font-size: 14px; -fx-padding: 8 16; -fx-background-color: #0078d4; -fx-text-fill: white;" />
                  
                  <Button fx:id="removeScreenshotButton" 
                          text="Remove Screenshot" 
                          onAction="#removeScreenshot"
                          disable="true"
                          style="-fx-font-size: 14px; -fx-padding: 8 16; -fx-background-color: #6c757d; -fx-text-fill: white;" />
               </HBox>
            </VBox>
            
         </VBox>
      </ScrollPane>
   </center>
   
   <bottom>
      <HBox spacing="10" alignment="CENTER_RIGHT" 
            style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #e0e0e0; -fx-border-width: 1 0 0 0;">
         <Button fx:id="cancelButton" 
                 text="Cancel" 
                 onAction="#cancel"
                 style="-fx-font-size: 14px; -fx-padding: 8 16; -fx-background-color: #6c757d; -fx-text-fill: white;" />
         
         <Button fx:id="saveButton" 
                 text="Save Note" 
                 onAction="#saveNote"
                 style="-fx-font-size: 14px; -fx-padding: 8 16; -fx-background-color: #28a745; -fx-text-fill: white;" />
      </HBox>
   </bottom>
   
</BorderPane>



