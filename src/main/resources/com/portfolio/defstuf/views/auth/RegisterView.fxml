<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.portfolio.defstuf.controllers.auth.RegisterController"
            style="-fx-background-color: #f5f5f5;">
   
   <center>
      <ScrollPane fitToWidth="true" fitToHeight="true">
         <VBox alignment="CENTER" spacing="20" 
               style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);"
               maxWidth="450">
            
            <Label text="Create Account" 
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #333333;" />
            
            <Label text="Register to get started" 
                   style="-fx-font-size: 14px; -fx-text-fill: #666666;" />
            
            <Separator />
            
            <VBox spacing="15" style="-fx-padding: 20 0;">
               <!-- Name Field -->
               <VBox spacing="5">
                  <Label text="Name:" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                  <TextField fx:id="nameField" 
                             promptText="Enter your name"
                             style="-fx-font-size: 14px; -fx-padding: 8;" />
               </VBox>
               
               <!-- Email Field -->
               <VBox spacing="5">
                  <Label text="Email:" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                  <TextField fx:id="emailField" 
                             promptText="Enter your email"
                             style="-fx-font-size: 14px; -fx-padding: 8;" />
               </VBox>
               
               <!-- Password Field -->
               <VBox spacing="5">
                  <Label text="Password:" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                  <PasswordField fx:id="passwordField" 
                                 promptText="Enter password (min 6 characters)"
                                 style="-fx-font-size: 14px; -fx-padding: 8;" />
               </VBox>
               
               <!-- Confirm Password Field -->
               <VBox spacing="5">
                  <Label text="Confirm Password:" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                  <PasswordField fx:id="confirmPasswordField" 
                                 promptText="Confirm your password"
                                 onAction="#handleRegister"
                                 style="-fx-font-size: 14px; -fx-padding: 8;" />
               </VBox>
               
               <!-- Register Button -->
               <Button fx:id="registerButton" 
                       text="Register" 
                       onAction="#handleRegister"
                       defaultButton="true"
                       style="-fx-font-size: 16px; -fx-padding: 10; -fx-background-color: #28a745; -fx-text-fill: white; -fx-cursor: hand;"
                       minWidth="200" />
               
               <!-- Login Link -->
               <HBox alignment="CENTER" spacing="5" style="-fx-padding: 10 0;">
                  <Label text="Already have an account?" style="-fx-font-size: 12px; -fx-text-fill: #666666;" />
                  <Hyperlink fx:id="loginLink" 
                             text="Login here" 
                             onAction="#navigateToLogin"
                             style="-fx-font-size: 12px;" />
               </HBox>
            </VBox>
         </VBox>
      </ScrollPane>
   </center>
   
</BorderPane>

