<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.portfolio.defstuf.controllers.auth.LoginController"
            style="-fx-background-color: #f5f5f5;">
   
   <center>
      <VBox alignment="CENTER" spacing="20" 
            style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);"
            maxWidth="400">
         
         <Label text="Welcome to DefStuf" 
                style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #333333;" />
         
         <Label text="Sign in to continue" 
                style="-fx-font-size: 14px; -fx-text-fill: #666666;" />
         
         <Separator />
         
         <VBox spacing="15" style="-fx-padding: 20 0;">
            <!-- Email Field -->
            <VBox spacing="5">
               <Label text="Email:" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
               <TextField fx:id="emailField" 
                          promptText="Enter your email"
                          style="-fx-font-size: 14px; -fx-padding: 8;" />
            </VBox>
            
            <!-- Password Field -->
            <VBox spacing="5">
               <Label text="Password:" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
               <PasswordField fx:id="passwordField" 
                              promptText="Enter your password"
                              onAction="#handleLogin"
                              style="-fx-font-size: 14px; -fx-padding: 8;" />
            </VBox>
            
            <!-- Login Button -->
            <Button fx:id="loginButton" 
                    text="Login" 
                    onAction="#handleLogin"
                    defaultButton="true"
                    style="-fx-font-size: 16px; -fx-padding: 10; -fx-background-color: #0078d4; -fx-text-fill: white; -fx-cursor: hand;"
                    minWidth="200" />
            
            <!-- Register Link -->
            <HBox alignment="CENTER" spacing="5" style="-fx-padding: 10 0;">
               <Label text="Don't have an account?" style="-fx-font-size: 12px; -fx-text-fill: #666666;" />
               <Hyperlink fx:id="registerLink" 
                          text="Register here" 
                          onAction="#navigateToRegister"
                          style="-fx-font-size: 12px;" />
            </HBox>
         </VBox>
      </VBox>
   </center>
   
</BorderPane>

