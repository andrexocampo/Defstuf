<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.portfolio.defstuf.controllers.MainViewController">
   
   <!-- Top bar with user info and logout -->
   <top>
      <HBox alignment="CENTER_RIGHT" spacing="10" 
            style="-fx-background-color: #f0f0f0; -fx-padding: 10;">
         <children>
            <Label fx:id="userLabel" text="Welcome, User" style="-fx-font-weight: bold;" />
            <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout" 
                    style="-fx-background-color: #d32f2f; -fx-text-fill: white; -fx-padding: 5 15;" />
         </children>
         <BorderPane.margin>
            <Insets bottom="10" />
         </BorderPane.margin>
      </HBox>
   </top>
   
   <!-- Main content -->
   <center>
      <VBox alignment="CENTER" spacing="20.0">
         <children>
            <Label text="Welcome to DefStuf" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
            <Label fx:id="infoLabel" text="System Information" />
            <Button fx:id="createNoteButton" text="Create Note" onAction="#openCreateNoteView" 
                    style="-fx-background-color: #0078d4; -fx-text-fill: white; -fx-padding: 10 20; -fx-font-size: 14px;" />
         </children>
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>

